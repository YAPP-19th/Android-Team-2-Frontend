<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_my_favorite_cv_image"
            android:layout_width="115dp"
            android:layout_height="100dp"
            app:cardElevation="0dp"
            app:layout_constraintDimensionRatio="1:0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/item_my_favorite_iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"/>

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart_empty"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:id="@+id/item_my_favorite_ib_heart"
            app:layout_constraintTop_toTopOf="@id/item_my_favorite_cv_image"
            app:layout_constraintEnd_toEndOf="@id/item_my_favorite_cv_image"/>


        <TextView
            android:id="@+id/item_my_favorite_tv_brand"
            style="@style/font_body2_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="@id/item_my_favorite_cv_image"
            app:layout_constraintTop_toBottomOf="@id/item_my_favorite_cv_image"
            tools:text="라면" />

        <TextView
            android:id="@+id/item_my_favorite_tv_title"
            style="@style/font_body1_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/item_my_favorite_tv_brand"
            app:layout_constraintTop_toBottomOf="@id/item_my_favorite_tv_brand"
            tools:text="땅콩버터라면" />

        <TextView
            android:id="@+id/item_my_favorite_tv_price"
            style="@style/font_body1_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/item_my_favorite_tv_title"
            app:layout_constraintTop_toBottomOf="@id/item_my_favorite_tv_title"
            tools:text="5300원" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>