<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.doctor.yumyum.presentation.viewmodel.ResearchRecipeViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.main.ResearchRecipeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/research_recipe_cl_appbar"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/research_recipe_tv_title"
                style="@style/font_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_main_bottom_research_recipe"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/research_recipe_tv_mode"
                style="@style/font_body2_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_change_mode"
                android:drawablePadding="4.5dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="@{()->viewModel.changeMode()}"
                android:paddingHorizontal="6.5dp"
                android:text="@{viewModel.mode}"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_change_mode"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/food" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/research_recipe_divider"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#F8F8F8"
            app:layout_constraintTop_toBottomOf="@id/research_recipe_cl_appbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/research_recipe_divider">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/research_recipe_tv_brand"
                    style="@style/font_h3_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="4dp"
                    android:text="@string/brand"
                    android:textColor="@color/black"
                    app:drawableStartCompat="@drawable/ic_martini"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/research_recipe_recyclerview_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingHorizontal="20dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/research_recipe_tv_brand"
                    app:spanCount="3"
                    tools:listitem="@layout/item_research_brand" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>