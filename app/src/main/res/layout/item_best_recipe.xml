<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_best_recipe_iv_image"
                android:layout_width="115dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="10dp"
                tools:ignore="MissingConstraints"
                tools:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/item_best_recipe_tv_brand"
                style="@style/font_body2_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="@id/item_best_recipe_iv_image"
                app:layout_constraintTop_toBottomOf="@id/item_best_recipe_iv_image"
                tools:text="라면" />

            <TextView
                android:id="@+id/item_best_recipe_tv_title"
                style="@style/font_body1_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/item_best_recipe_tv_brand"
                app:layout_constraintTop_toBottomOf="@id/item_best_recipe_tv_brand"
                tools:text="땅콩버터라면" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_body1_medium"
                android:id="@+id/item_best_recipe_tv_price"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/item_best_recipe_tv_title"
                app:layout_constraintTop_toBottomOf="@id/item_best_recipe_tv_title"
                tools:text="5300원"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</layout>